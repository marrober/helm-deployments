apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: app-01-dev-01
  namespace: openshift-gitops
spec:
  destination:
    namespace: argo-root
    server: https://kubernetes.default.svc
  source:
    path: app-root/apps/app-01/env/01-dev
    repoURL: https://github.com/marrober/helm-deployments.git
    targetRevision: main
  project: root
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
    - Validate=true
    - CreateNamespace=true
    - PrunePropagationPolicy=foreground
    - PruneLast=true
    retry:
      limit: 1
      backoff:
        duration: 5s
        factor: 2
        maxDuration: 20s
